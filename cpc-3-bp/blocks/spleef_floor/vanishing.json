{
	"format_version": "1.19.50",
	"minecraft:block": {
		"description": {
			"identifier": "cpc:spleef_vanishing",
			"menu_category": { "category": "construction" },
			"register_to_creative_menu": true
		},
		"components": {
			"minecraft:destructible_by_explosion": false,
			"minecraft:destructible_by_mining": { "seconds_to_destroy": 1.0 },
			"minecraft:loot": "loot_tables/empty.json",
			"minecraft:map_color": "#CC0033",
			"minecraft:light_dampening": 0,

			"minecraft:on_player_destroyed": { "event": "cpc:break" },
			"minecraft:on_step_off": { "event": "cpc:vanish" },

			"minecraft:material_instances": {
				"*": {
					"ambient_occlusion": true,
					"face_dimming": false,
					"render_method": "blend",
					"texture": "cpb_spleef_vanishing"
				}
			}
		},
		"events": {
			"cpc:break": { "set_block": { "block_type": "cpc:spleef_vanishing_x" } },
			"cpc:vanish": {
				"set_block": { "block_type": "cpc:spleef_vanishing_x" },
				"run_command": {
					"command": [ "playsound random.glass @a[r=32] ~ ~ ~ 1.0 1.25" ]
				}
			}
		}
	}
}
